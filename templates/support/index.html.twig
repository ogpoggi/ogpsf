{% extends 'base.html.twig' %}

{% block title %}Hello SupportController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {{ form_start(form) }}

        {{ form_label(form.title, 'title') }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}


        {{ form_label(form.content, 'content') }}
        {{ form_widget(form.content) }}
        {{ form_errors(form.content) }}

    <button type="submit">ogpoggi</button>

    {{ form_end(form) }}

    {% for support in supports %}
        <table class="table">
            <tr>
                <td>
                    {{ support.id }}</td>
                <td>
                    {{ support.title }}</td>
                <td>
                    {{ support.content }}</td>
                <td>
                    {{ support.user.email }}</td>
                <td>
                    {{ support.createdAt ? support.createdAt | date ('d/m/Y H:m') }}</td>
            </tr>
        </table>

    {% endfor %}


</div>


{% endblock %}
