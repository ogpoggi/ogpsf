{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}

{% endblock %}
{% block body %}
<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card my-5">
        <div class="card-body">
            <h1>Register</h1>

            {{ form_start(registrationForm, { attr: {novalidate: 'novalidate'} }) }}
            <div class="row">
                <div class="col">{{ form_row(registrationForm.nom) }}</div>
                <div class="col">{{ form_row(registrationForm.prenom) }}</div>
            </div>
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.avatar) }}
            <div class="row">
                <div class="col">{{ form_row(registrationForm.plainPassword.first) }}</div>
                <div class="col">{{ form_row(registrationForm.plainPassword.second) }}</div>
            </div>

            <button id="btnregister" class="btn btn-lg btn-primary btn-block text-uppercase">Register</button>
            {{ form_end(registrationForm) }}
            <a class="btn btn-danger" href={{ path("connect_google") }}>SIGN IN GOOGLE</a>
            {#<a class="btn btn-primar" href={{ path("connect_facebook") }}>SIGN IN FACEBOOK</a>#}
        </div>
    </div>
</div>
{% endblock %}
