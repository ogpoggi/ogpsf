{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header"><h1><a class="btn btn-primary" href="{{ path('review_index') }}"><i class="fas fa-arrow-alt-circle-left"></i></a> Review</h1></div>

        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ review.id }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ review.description }}</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>{{ review.rating }}</td>
                </tr>
                </tbody>
            </table>
            <a class="btn btn-warning btn-sm" href="{{ path('review_edit', {'id': review.id}) }}">edit</a>

            {{ include('review/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
